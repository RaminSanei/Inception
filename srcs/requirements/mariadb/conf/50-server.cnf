[server]

init_file = /etc/mysql/init.sql

[mysqld]

user                    = mysql
basedir                 = /usr
tmpdir                  = /tmp
datadir                 = /var/lib/mysql
pid-file                = /run/mysqld/mysqld.pid

bind-address            = 0.0.0.0 # Allow connections from other containers or hosts

expire_logs_days        = 10
max_connections         = 200


character-set-server    = utf8mb4
collation-server        = utf8mb4_general_ci

